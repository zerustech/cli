base=`cd $(dirname $BASH_SOURCE) && pwd`

# This is a command line wrapper of varnishstat.
# 
# @author Michael Lee <michael.lee@zerustech.com>

: ${varnish_home:=""}

function usage()
{
    printf "varnish-stat: usage: varnish-stat -h varnish_home [arguments]\n"
    exit 0
}

while getopts "h:" opt; do

    case $opt in

        h) varnish_home="$OPTARG";;

        *) usage
           ;;

    esac

done

shift $((OPTIND - 1))

if [ "$varnish_home" == "" ]; then

    usage

fi

sudo $varnish_home/bin/varnishstat "$@"

printf "\n\n"
